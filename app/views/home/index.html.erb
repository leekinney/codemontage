<body>
  <section>
    <div class="row">

      <div id="mission" class="large-10 large-centered columns row">
          <%= image_tag("left_curly.jpg", :class => "small-1 large-2 columns") %>
          <span class="mission_text small-12 large-9 columns">
            <span id="cm_logo_code">{code}</span>
            <span id="cm_logo_montage">montage</span>
            empowers
            <span id="coders" title="software developers, engineers, hackers, anyone who leverages computer programming">
              <strong>coders</strong>
            </span>
            to improve their
            <span id="impact" title="success, difference, good accomplished">
              <strong>impact</strong>
            </span> on the world.
          </span>
          <%= image_tag("right_curly.jpg", :class => "small-1 large-2 columns") %>
      </div>

    </div>
  </section>
  <section>
    <div id="coder_welcome" class="row">
      <div class="large-10 index panel radius shadow large-centered columns row">

        <div id="welcome_message" class="large-6 columns">
          <h2>Ready to change the world?</h2>
          <p>We believe <%= link_to 'coders can be superheroes', "http://devslovebacon.com/conferences/bacon-2013/talks/developers-are-superheroes-and-so-can-you" %>.</br>
            Join us to find open source, social impact projects that improve the world.</p>
        </div>
        <div id="sign_up" class="large-6 columns text-center">
		    <% if user_signed_in? %>
          <%= link_to '<i class="fi-laptop"></i> &nbsp;Start Coding Now'.html_safe, projects_path, :class => "large radius index button centered home-signup" %>
        <% else %>
          <%= link_to '<i class="fi-social-github"></i> Sign up with GitHub'.html_safe, "/auth/github", :class => "large radius index button centered home-signup" %>
        <% end %>
        <p>or, <%= link_to "sign up with an email address", new_user_registration_path %></p>
        </div>

      </div>
    </div>
  </section>
  <section>
    <% if @featured_event.present? %>
    <div id="featured_event" class="row">
      <div class="large-10 index panel radius shadow large-centered columns row">
        <div id="event_logo" class="large-4 columns">
          <%= link_to (image_tag @featured_event.logo, :height => "400px"), event_path(@featured_event) %>
        </div>
        <div class="large-8 columns">
          <h2><%= link_to @featured_event.name, event_path(@featured_event) %></h2>
          <p><%=raw @featured_event.teaser %> Will you be there? <%= link_to 'RSVP', event_path(@featured_event) %>!</p>
        </div>
      </div>
    </div>
    <% end %>
  </section>
  <section>
    <div id="secondary_welcome" class="large-10 large-centered columns row">
      <div id="org_welcome" class="large-6 columns">
        <h3>Submit an open source project</h3>
        <p>Working on software to save the world? We'd love to help! Let us know the GitHub repository and we'll take it from there.</p>
        <%= link_to "Submit a Project", new_organization_path, :class => "medium radius index button" %>
      </div>
      <div id="company_welcome" class="large-6 columns">
        <h3>Support coding for social good</h3>
        <p>Want to hire or connect with superhero software developers? Reach out to learn about our Corporate Partnerships.</p>
        <%= mail_to "partnerships@codemontage.com", "Support Coders", :subject => "Interested in Corporate Partnership", :class => "medium radius index button" %>
      </div>
    </div>
  </section>

  <% if current_user && @current_event && !current_user.events.include?(@current_event) %>
    <%= render "events/check_in_prompt" %>
  <% end %>

  <% content_for(:press) do %>Press<% end %>
</body>
